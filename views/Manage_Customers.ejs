<%- include("_header") -%>

<h1>Find Customers</h1>
<h2>Total Number of records in the Database:<%=sum_records%></h2>

<form action="/Manage_Customers" method="POST">
    <table>
        <tr>
            <td><label for="id">ID</label>:</td>
            <td><input type="number" name="id" id="id" /></td>
            <td>(equal)</td>
        </tr>
        <tr>
            <td><label for="firstname">Firstname</label>:</td>
            <td><input type="text" name="firstname" id="firstname" /></td>
            <td>(begins with)</td>
        </tr>
        <tr>
            <td><label for="lastname">Lastname</label>:</td>
            <td><input type="text" name="lastname" id="lastname" /></td>
            <td>(begins with)</td>
        </tr>
        <tr>
            <td><label for="state">State</label>:</td>
            <td><input type="text" name="prod_desc" id="prod_desc" /></td>
            <td>(equals)</td>
        </tr>
        <tr>
            <td><label for="sales">Sales YTD</label>:</td>
            <td><input type="number" name="sales" id="sales" /></td>
            <td>(greater than or equal)</td>
        </tr>
        <tr>
            <td><label for="previous">Previous Years Sales </label>:</td>
            <td><input type="number" name="previous" id="previous" /></td>
            <td>(greater than or equal)</td>
        </tr>
        <tr>
            <td span="2">
                <input type="submit" class="btn btn-primary" value="Find" />
                <input type="reset" class="btn btn-primary" value="Reset" />
            </td>
        </tr>
    </table>
</form>
<br>
<%- include("_footer") -%>   